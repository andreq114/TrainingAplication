<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo3ex2"
    tools:context=".ExDisp_activity">

    <ImageView
        android:id="@+id/minusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/minus2"
        android:onClick="hideRow"
        app:layout_constraintEnd_toStartOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Nazwa_Cwiczenia"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="370dp"
        android:layout_height="265dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_name">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/set_title"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/colorButtonNormal"
                android:text="@string/sets"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/repeates_title"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/colorButtonNormal"
                android:text="@string/repeats"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kg_title"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="?attr/colorButtonNormal"
                android:text="@string/weight"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/set1"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/sets"
                android:inputType="number|text|numberDecimal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/repeat1"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/repeats"
                android:inputType="number|text|numberDecimal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/weight1"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/weight"
                android:inputType="number|text|numberDecimal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                tools:layout_editor_absoluteY="456dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/set2"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/sets"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/repeat2"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/repeats"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/weight2"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/weight"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/set3"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/sets"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/repeat3"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/repeats"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/weight3"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/weight"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/set4"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/sets"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/repeat4"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/repeats"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/weight4"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_orange_light"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="@string/weight"
                android:inputType="number|text|numberDecimal"
                android:text="empty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"
                android:visibility="invisible"
                tools:layout_editor_absoluteY="456dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:background="@android:color/holo_green_light"
        android:onClick="clickDone"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:background="@android:color/holo_red_light"
        android:onClick="clickFail"
        android:text="@string/fail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:onClick="editExercises"
        android:text="@string/Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:background="@android:color/darker_gray"
        android:onClick="saveExercises"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/day_name"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plus2"
        android:onClick="addRow"
        app:layout_constraintStart_toEndOf="@+id/edit_button"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"
        android:onClick="clickDelete"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>